{
    "appId": "com.teolin.win-deploy",
    "productName": "WinDeploy",
    "copyright": "Copyright Â© 2023 Teolin Codreanu",
    "directories": {
        "output": "WinDeploy"
    },
    "files": [
        "src/",
        "src/main.js",
        {
            "from": "src/drivers",
            "to": "drivers",
            "filter": "**/*"
        }
    ],
    "extraResources": [
        {
            "from": "src/drivers",
            "to": "drivers",
            "filter": "**/*"
        }
    ],
    "win": {
        "target": "portable",
        "icon": "src/interface/app.ico"
    },
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage"
    }
}